
<div class="d-flex justify-content-center">

    <div class="row mb-2 mb-md-4 mb-lg-5">

        {# Technic Logo & Name #}
    
        <div class="col-12 col-md-8 p-0 ps-2 ps-md-3 pe-2 pe-md-3 mb-2 mb-md-0"> 

            <div class="row sm-border-none border rounded d-flex align-items-center py-2">

                {# Technic Thumbnail if provided #}

                {% if technic.logo %}

                    <div class="col-4 col-md-3 col-lg-3 d-flex align-items-center justify-content-center">

                        <img class="thumbnail rounded img-fluid" src="{{ vich_uploader_asset(technic) }}" alt="Technic Thumbnail">
                    
                    </div>
                
                {% endif %}

                {# Technic Name #}

                <div class="col-8 col-md-9 col-lg-9 ps-1 ps-md-3 d-flex jsutify-content-center align-items-center">

                    <h2 class="technic-name d-inline-block fw-bold">{{technic.name[:1] | upper ~ technic.name[1:]}}
                        
                        {% if isCreator or isAdmin %}

                            <a href="{{ path( 'update_technic', {'id': technic.id} ) }}" class="pp-edition-mode fs-6 ms-3">Modifier</a>
                        
                        {% endif %}
                    
                    
                    </h2>

                    <style>

                        @media screen and (max-width: 580px) {

                            .technic-name{

                                font-size: 18px;
                            }


                        }                    
                    
                    </style>


                </div>            
            
            
            </div>

        </div>

        {# Progress bar #}

        <div class="col-12 col-md-4 p-0 ps-md-2 mb-2 mb-md-0"> 

            <div class="sm-border-none border rounded d-flex align-items-center justify-content-center h-100">

                <div>

                    {% include "technic/_show/progress_bar.html.twig" %}

                </div>

            </div>

        </div>

    </div>

</div>


